{
  "manifest_version": 2,
  "name": "devnull",
  "version": "1.0",
  "description": "Send your tabs to the void!",
  "permissions": [
    "tabs",
    "cookies",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "devnull"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "devnull@keatonhasse.com"
    }
  }
}
